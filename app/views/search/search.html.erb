<%= form_tag root_path, method: :get do %>
  <%= label_tag :search, 'Search programming language' %>
  <%= text_field_tag :search, params[:search], style:  "width: 35%;" %>
  <%= submit_tag 'Search' %>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Designed by</th>
    </tr>
  </thead>

  <tbody>
    <% @data.each do |data| %>
      <tr>
        <td><%= data['Name'] %></td>
        <td><%= data['Type'] %></td>
        <td><%= data['Designed by']%><td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
